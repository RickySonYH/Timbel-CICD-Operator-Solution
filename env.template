# [advice from AI] Timbel 플랫폼 환경 변수 템플릿
# 실제 사용 시 .env 파일로 복사하고 값을 설정하세요

# =============================================================================
# AI API Keys (필수 설정)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://timbel_user:timbel_password@localhost:5432/timbel_db
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# MinIO Configuration (파일 저장소)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=timbel_access
MINIO_SECRET_KEY=timbel_secret
MINIO_BUCKET_NAME=timbel-assets

# =============================================================================
# ChromaDB Configuration (벡터 DB)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001
REACT_APP_MINIO_URL=http://localhost:9000

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3002
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=timbel_admin

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=timbel:*
LOG_LEVEL=debug
CHOKIDAR_USEPOLLING=true

# =============================================================================
# ECP-AI Integration (향후 통합 예정)
# =============================================================================
ECP_AI_API_URL=https://your-ecp-ai-endpoint
ECP_AI_API_KEY=your_ecp_ai_api_key

# =============================================================================
# Security Settings
# =============================================================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Performance Settings
# =============================================================================
MAX_FILE_SIZE=50MB
VECTOR_DIMENSION=1536
SEARCH_TIMEOUT=30000
