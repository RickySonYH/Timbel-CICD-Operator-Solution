# [advice from AI] Timbel 플랫폼 환경 변수 템플릿
# 실제 사용 시 .env 파일로 복사하고 값을 설정하세요

# =============================================================================
# AI API Keys (필수 설정)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://timbel_user:timbel_password@localhost:5432/timbel_knowledge
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# =============================================================================
# MinIO Configuration (파일 저장소)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=timbel_access
MINIO_SECRET_KEY=timbel_secret
MINIO_BUCKET_NAME=timbel-assets

# =============================================================================
# ChromaDB Configuration (벡터 DB)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3001
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001
REACT_APP_MINIO_URL=http://localhost:9000

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3002
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=timbel_admin

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=timbel:*
LOG_LEVEL=debug
CHOKIDAR_USEPOLLING=true

# =============================================================================
# ArgoCD Integration Configuration
# =============================================================================
ARGOCD_URL=http://argocd.langsa.ai
ARGOCD_USERNAME=admin
ARGOCD_PASSWORD=your_argocd_password
ARGOCD_TOKEN=your_argocd_token_here
ARGOCD_NAMESPACE=argocd
ARGOCD_API_VERSION=v1

# ArgoCD 서비스 접근 설정
ARGOCD_INTERNAL_URL=http://argocd-server:80
ARGOCD_GRPC_WEB=true
ARGOCD_INSECURE=true

# =============================================================================
# Jenkins Integration Configuration
# =============================================================================
JENKINS_URL=http://jenkins.langsa.ai:8080
JENKINS_USERNAME=admin
JENKINS_PASSWORD=your_jenkins_password
JENKINS_API_TOKEN=your_jenkins_api_token_here
JENKINS_CRUMB_ISSUER=true

# Jenkins 빌드 설정
JENKINS_DEFAULT_BRANCH=main
JENKINS_BUILD_TIMEOUT=1800
JENKINS_POLL_INTERVAL=30

# =============================================================================
# Nexus Repository Integration Configuration
# =============================================================================
NEXUS_URL=http://nexus.langsa.ai:8081
NEXUS_USERNAME=admin
NEXUS_PASSWORD=your_nexus_password
NEXUS_API_VERSION=v1

# Nexus Repository 설정
NEXUS_DOCKER_REGISTRY=nexus.langsa.ai:8082
NEXUS_MAVEN_REPOSITORY=maven-public
NEXUS_NPM_REPOSITORY=npm-public

# =============================================================================
# Kubernetes Configuration
# =============================================================================
KUBERNETES_CONFIG_PATH=/home/rickyson/.kube/config
KUBERNETES_NAMESPACE=timbel-cicd
KUBERNETES_CLUSTER_NAME=timbel-cluster
KUBERNETES_CONTEXT=kind-timbel-cluster

# Kubernetes API 설정
K8S_API_SERVER=https://kubernetes.default.svc
K8S_SERVICE_ACCOUNT_TOKEN_PATH=/var/run/secrets/kubernetes.io/serviceaccount/token
K8S_CA_CERT_PATH=/var/run/secrets/kubernetes.io/serviceaccount/ca.crt

# =============================================================================
# Docker Registry Configuration
# =============================================================================
DOCKER_REGISTRY=nexus.langsa.ai:8082
DOCKER_USERNAME=admin
DOCKER_PASSWORD=your_docker_password
DOCKER_EMAIL=admin@timbel.ai

# Harbor Registry (Alternative)
HARBOR_URL=harbor.langsa.ai
HARBOR_USERNAME=admin
HARBOR_PASSWORD=your_harbor_password
HARBOR_PROJECT=timbel

# =============================================================================
# Git Integration Configuration
# =============================================================================
GIT_DEFAULT_BRANCH=main
GIT_WEBHOOK_SECRET=your_webhook_secret_here
GIT_CLONE_TIMEOUT=300

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_URL=http://rdc.rickyson.com:3001/api/github/webhooks

# GitLab Integration
GITLAB_URL=https://gitlab.com
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_WEBHOOK_URL=http://rdc.rickyson.com:3001/api/gitlab/webhooks

# =============================================================================
# ECP-AI Integration (향후 통합 예정)
# =============================================================================
ECP_AI_API_URL=https://your-ecp-ai-endpoint
ECP_AI_API_KEY=your_ecp_ai_api_key

# =============================================================================
# Security Settings
# =============================================================================
CORS_ORIGIN=http://rdc.rickyson.com:3000,http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# API Keys and Secrets
API_SECRET_KEY=your_api_secret_key_here
ENCRYPTION_KEY=your_32_char_encryption_key_here
WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# Performance Settings
# =============================================================================
MAX_FILE_SIZE=100MB
VECTOR_DIMENSION=1536
SEARCH_TIMEOUT=30000
MAX_CONCURRENT_BUILDS=5
BUILD_TIMEOUT=3600
DEPLOYMENT_TIMEOUT=1800

# Memory and CPU limits
NODE_OPTIONS=--max-old-space-size=4096
CONTAINER_MEMORY_LIMIT=2Gi
CONTAINER_CPU_LIMIT=1000m
